<li id="<%= feed_item.id %>">
<span class="user">
  <%= link_to feed_item.user.name, feed_item.user %>
</span>
<span class='content'><%= feed_item.content %></span>
<span class='timestamp'>
 dared <%= time_ago_in_words(feed_item.created_at) %> ago.
</span>
<% if feed_item.accepted == true %>
 <span>Accepted </span>
<% else %>
<%= link_to 'Accept', :controller => "dares", :action => "accept_dare", method: :put, :id => feed_item.id, class: "btn btn-primary"  %>
<% end %>
<!--<input class='acceptButton' type="submit" value="Accept Dare"/>-->
</li>
