<li>
  <span class='content'><%= dare.content %></span>
  <span class='timestamp'>
   dared <%= time_ago_in_words(dare.created_at) %> ago.
</span>
<% if dare.accepted == true %>
 <span>Accepted by: </span>
  <%= link_to dare.accepted_by %>
<% else %>
<%= link_to 'Accept', :controller => "dares", :action => "accept", method: :put, :id => dare.id, class: "btn btn-primary"  %>
<% end %>
</li>

